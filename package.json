{
  "name": "soykaf",
  "version": "0.0.0",
  "description": "Character Management App for Shadowrun 5e",
  "main": "index.js",
  "scripts": {
    "start": "npm run build-assets && node server.js",
    "start-dev": "npm run watch & npm run live-reload & nodemon server.js",
    "watch": "npm run watch-js",
    "watch-js": "mkdir -p static/scripts && watchify src/main.js --outfile static/scripts/bundle.js --verbose --debug",
    "build-js": "mkdir -p static/scripts && browserify src/main.js --outfile static/scripts/bundle.js",
    "build-assets": "npm run build-js",
    "live-reload": "live-reload static/**/* --port 9092"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmehlinger/soykaf.git"
  },
  "author": "Richard Mehlinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmehlinger/soykaf/issues"
  },
  "homepage": "https://github.com/rmehlinger/soykaf#readme",
  "dependencies": {
    "browserify": "^14.4.0",
    "express": "~4.15.3",
    "nodemon": "~1.11.0",
    "passport-dropbox-oauth2": "^1.1.0"
  },
  "devDependencies": {
    "live-reload": "^1.1.0",
    "watchify": "^3.9.0"
  }
}
